    "if os.path.exists(best_checkpoint_path):\n",
    "    print(f\"\\n\ud83d\udcbe Best checkpoint: {best_checkpoint_path}\")\n",
    "else:\n",
    "    print(f\"\\n\u26a0\ufe0f Best checkpoint not found (may not have been saved)\")"
   ]
